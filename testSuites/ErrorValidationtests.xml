<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite parallel= "tests" name="Suite">
<listeners>
<listener class-name="rahulshettyacademy.TestComponents.Listeners"/>
</listeners>
<groups>
	<run>
		<include name= "ErrorHandling"/>
	</run>
</groups>
<test thread-count="1" name="Error Validation">
  <classes>
	<class name="rahulshettyacademy.tests.ErrorValidations"/>
  </classes>
</test> <!-- Test -->
  
<test thread-count="5" name="Submit Order Test">
    <classes>
      <class name="rahulshettyacademy.tests.SubmitOrder"/>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
